<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danny.tipcalculator.MainActivityFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bill Total: "
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/TxtBillTotal_EditText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="5"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Percent: "
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="5dp"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tip:"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="5dp"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$0.00"
            android:id="@+id/LblTip15_TextView"
            android:layout_row="2"
            android:layout_column="3"
            android:padding="5dp"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$0.00"
            android:id="@+id/LblTip20_TextView"
            android:layout_row="2"
            android:layout_column="4"
            android:padding="5dp"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total: "
            android:id="@+id/textView2"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="5dp"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10%"
            android:id="@+id/textView7"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="5dp"
            android:textSize="23dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15%"
            android:id="@+id/textView8"
            android:layout_row="1"
            android:layout_column="3"
            android:padding="5dp"
            android:textSize="23dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20%"
            android:id="@+id/textView11"
            android:layout_row="1"
            android:layout_column="4"
            android:padding="5dp"
            android:textSize="23dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$0.00"
            android:id="@+id/LblTip10_TextView"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="5dp"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$0.00"
            android:id="@+id/LblTotal10_TextView"
            android:layout_row="3"
            android:layout_column="2"
            android:padding="5dp"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$0.00"
            android:id="@+id/LblTotal15_TextView"
            android:layout_row="3"
            android:layout_column="3"
            android:padding="5dp"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="0"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$0.00"
            android:id="@+id/LblTotal20_TextView"
            android:layout_row="3"
            android:layout_column="4"
            android:padding="5dp"
            android:layout_gravity="center|fill"
            android:layout_rowWeight="0"
            android:textSize="23dp" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/BtnCalculate_Button"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1342097.assignment1.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TxtTitle_EditText"
        android:hint="Title"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/TxtBody_EditText"
        android:hint="Body"
        android:layout_weight="1"
        android:gravity="top|left"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3a3a3a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Reminder"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SwtReminder_Switch"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:checked="false" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#232323" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3a3a3a"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#232323"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3a3a3a"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#232323"
        android:visibility="gone" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#3a3a3a"
        android:padding="3dp">

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view"
            android:layout_margin="10dp"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view2"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view3"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view4"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view5"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view6"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view7"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />

        <com.example.a1342097.assignment1.CircleView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/view8"
            android:layout_gravity="left|center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight=".8" />
    </LinearLayout>


</LinearLayout>